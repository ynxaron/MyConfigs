// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "alt-`": "workspace::ToggleBottomDock",
      "alt-l": "workspace::ToggleRightDock",
      "alt-s": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "alt-a": "project_panel::NewFile",
      "alt-x": "project_panel::Cut",
      "alt-p": "project_panel::Paste",
      "alt-c": "project_panel::Copy",
      "alt-d": "project_panel::Delete"
    }
  },

  {
    "context": "Editor",
    "bindings": {
      "alt-k": "editor::Hover",
      "gd": "editor::GoToDefinition",
      "alt-tab": "editor::Tab",
      "alt-left": "pane::ActivatePreviousItem",
      "alt-right": "pane::ActivateNextItem",
      "alt-c": "pane::CloseActiveItem",
      "alt-alt": "file_finder::Toggle",
      "alt-p": "command_palette::Toggle",
      "alt-space": "command_palette::Toggle"
    }
  }
]
