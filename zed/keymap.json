// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-`": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-k": "editor::Hover",
      "gd": "editor::GoToDefinition",
      "ctrl-tab": "editor::Tab",
      "ctrl-left": "pane::ActivatePrevItem",
      "ctrl-right": "pane::ActivateNextItem",
      "ctrl-c": "pane::CloseActiveItem"
    }
  }
]
